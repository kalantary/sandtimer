<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:src="@drawable/sand_800_glass"
            android:tintMode="add"
            android:tint="#00ff0000" />
    </item>
    <item>
        <vector
            android:width="800dp"
            android:height="1000dp"
            android:viewportHeight="1000.0"
            android:viewportWidth="800.0"
            >
            <path
                android:name="glass_edge"
                android:strokeColor="#000000"
                android:strokeWidth="10"
                android:fillColor="#00ff0000"
                android:pathData="M100 200
                    c0 -200 600 -200 600 00
                    s-280 150 -280 300
                    s280 100 280 300
                    s-600 200 -600 0
                    s280 -150 280 -300
                    s-280 -100 -280 -300
                    " >

            </path>
        </vector>
    </item>

    <item
        android:top="30dp"
        android:left="50dp"
        android:width="700dp"
        android:height="170dp">
        <shape android:tint="#00ff0000" android:tintMode="add" >
            <corners android:radius="15dp"/>
            <gradient
                android:centerX="400dp"
                android:centerY="100dp"
                android:startColor="#000000"
                android:endColor="#555555"
                android:angle="0"/>
        </shape>
    </item>
    <item
        android:width="700dp"
        android:height="170dp"
        android:left="50dp"
        android:top="800dp">
        <shape android:tint="#00ff0000" android:tintMode="add" >
            <corners android:radius="15dp"/>
            <gradient
                android:centerX="400dp"
                android:centerY="100dp"
                android:startColor="#000000"
                android:endColor="#555555"
                android:angle="0"/>
        </shape>
    </item>
</layer-list>