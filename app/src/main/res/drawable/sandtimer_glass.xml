<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <bitmap android:src="@drawable/sand_800_glass"/>
    </item>
    <item>
        <vector
            android:width="800dp"
            android:height="1000dp"
            android:viewportHeight="1000.0"
            android:viewportWidth="800.0">
            <path
                android:name="glass_top"
                android:strokeColor="#ffffff"
                android:strokeWidth="0"
                android:fillColor="?android:attr/windowBackground"
                android:pathData="
                M380 500
                C380 350 100 400 100 200
                L 700 200
                C700 400 420 350 420 500
                z
                " />
        </vector>
    </item>
    <item>
        <vector
            android:width="800dp"
            android:height="1000dp"
            android:viewportHeight="1000.0"
            android:viewportWidth="800.0">
            <path
                android:name="glass_bottom"
                android:strokeColor="#ffffff"
                android:strokeWidth="0"
                android:fillColor="?android:attr/windowBackground"
                android:pathData="
                M380 500
                C380 650 100 600 100 800
                S700 1000 700 800
                S420 650 420 500
                z
                " >
            </path>
        </vector>
    </item>
    <item>
        <vector
            android:width="800dp"
            android:height="1000dp"
            android:viewportHeight="1000.0"
            android:viewportWidth="800.0">
            <path
                android:name="glass_edge"
                android:strokeColor="#000000"
                android:strokeWidth="10"
                android:fillColor="#00ffffff"
                android:pathData="M100 200
                    c0 -200 600 -200 600 00
                    s-280 150 -280 300
                    s280 100 280 300
                    s-600 200 -600 0
                    s280 -150 280 -300
                    s-280 -100 -280 -300
                    " >
            </path>
        </vector>
    </item>

    <item
        android:top="30dp"
        android:left="50dp"
        android:width="700dp"
        android:height="170dp">
        <shape android:tint="#66ff0000" android:tintMode="add" >
            <corners android:radius="15dp"/>
            <gradient
                android:centerX="400dp"
                android:centerY="100dp"
                android:startColor="#000000"
                android:endColor="#555555"
                android:angle="0"/>
        </shape>
    </item>
    <item
        android:width="700dp"
        android:height="170dp"
        android:left="50dp"
        android:top="800dp">
        <shape android:tint="#66ff0000" android:tintMode="add" >
            <corners android:radius="15dp"/>
            <gradient
                android:centerX="400dp"
                android:centerY="100dp"
                android:startColor="#000000"
                android:endColor="#555555"
                android:angle="0"/>
        </shape>
    </item>
</layer-list>